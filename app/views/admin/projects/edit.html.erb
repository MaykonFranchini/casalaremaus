<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-10">
      <div class="card-volunteer">
        <div class="row justify-content-center">
          <div class="col-sm-12 col-md-8">
            <div class="form-volunteer-box py-5">
              <%= simple_form_for [:admin, @project] do |f| %>
                <%= f.input :name, label: 'Nome do projeto:', class: "form-group" %>
                <%= f.input :description, label: 'Descrição do Projeto', class: "form-group" %>
                <%= f.input :photo, as: :file %>
                <%= f.button :submit, "Confirmar alterações", class: "button-banner" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
