<div class="container">
  <div class="card-volunteer">
    <br>
    <h2>Cadastrar</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-volunteer-box form-inputs">
          <%= f.input :email,
                  label: "E-mail",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                  label: "Senha",
                  required: true,
                  hint: ("MÃ­nimo de caracteres: #{@minimum_password_length}" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                  label: "Confirmar senha",
                  hint: ("MÃ­nimo de caracteres: #{@minimum_password_length}" if @minimum_password_length),
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Cadastrar", class: "button-banner" %>
        </div>
      <br>
      <% end %>
    <br>
  </div>
</div>