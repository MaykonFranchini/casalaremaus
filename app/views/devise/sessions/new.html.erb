<div class="container">
  <div class="card-volunteer">
    <br>
    <h2>Entrar como admin</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs" style="padding: 10px 0; font-size: 16px; color: rgb(0, 0, 0); border: none; outline: none; background: transparent;">
          <%= f.input :email,
                      label: "E-mail",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      label: "Senha",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: "Lembrar dados", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Entrar", class: "button-banner" %>
        </div>
      <br>
    <% end %>
      <%= render "devise/shared/links" %>
    <br>
  </div>
</div>