<div class="container">
  <h1>Welcome, <%=  @order.name %></h1>
  <h2>Let's start your order!!!</h2>
  <%= simple_form_for [@order,@item] do |f| %>
  <%= f.association :donation %>
  <%= f.input :quantity  %>
  <%= f.submit class: "button-donation-submit"  %>
  <% end %>

  <div class="mt-5 d-flex row item-div">
    <% @order.items.each do |item| %>

      <div class="item col-xm-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
        <img src='https://picsum.photos/id/824/200/300' class="square-image" />
        <div class="item-content">
          <h3><%= item.donation.name %></h3>
          <p>Quantity: <%= item.quantity %></p>
        </div>
      </div>
    <% end %>
  </div>
  <button id="sweet-alert-demo" class="button-donation-submit my-2">Complete Donation</button>
<%= link_to "", root_path, id: "submit-link", class: "hidden" %>
</div>
