<div class="container">
  <div class="cards-project">
    <div class="card-projects-header">
      <h2>Nossos projetos dispon√≠veis:</h2>
      <%= link_to "Tenho uma proposta", new_project_url, class: "button-banner" %>
    </div>
    <div class="row">
      <% @projects.each do |project|  %>
        <div class="col-sm-12 col-md-6 col-lg-4">
          <%= link_to project_path(project) do %>
            <% if project.photo.present? %>
              <div class="card-project" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path project.photo.key, height: 300, crop: :fill %>')">
            <% else %>
              <div class="card-project default-image-project">
            <% end %>
              <p><%= project.name %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>