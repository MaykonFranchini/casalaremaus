<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-10">
      <div class="card-volunteer">
        <% if @project.photo.attached? %>
          <div class="form-header" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @project.photo.key, height: 300, crop: :fill %>')">
        <% else %>
          <div class="form-header default-image-project">
        <% end %>
            <h2><%= @project.name %></h2>
            <p><%= @project.description %></p>
          </div>
        <div class="row justify-content-center">
          <div class="col-sm-12 col-md-8">
            <div class="form-volunteer-box py-5">

              <%= simple_form_for [@project, @volunteer] do |f| %>
                <%= f.input :name, label: 'Nome:' %>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <%= f.input :email, label: "Email:" %>
                  </div>
                  <div class="form-group col-md-6">
                    <%= f.input :phone, label: "Contato:" %>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <%= f.input :marital_status, collection: Volunteer::MAR_STATUS, label: "Estado civil:" %>
                  </div>
                  <div class="form-group col-md-6">
                    <%= f.input :date_of_birth, as: :date, max: "01-01-2006", min: "01-01-1930", html5: true, label: "Data de Nascimento:" %>
                  </div>
                </div>

    

                
                <div class="form-row">
                  <div class="col-md-6">
                    <%= f.collection_radio_buttons :cpf_or_cnpj, [['cpf', 'CPF'], ['cnpj', 'CNPJ']], :first, :last do |b| %>
                      <%= b.label { b.radio_button + " " + b.text } %><br>
                    <% end %>
                  </div>
                  <div class="form-group col-md-6">
                    <% if :cpf_or_cnpj == 'cpf' %>
                      <%= f.hidden_field :cnpj, value: nil %>
                      <%= f.input :cpf, label: "CPF:" %>
                    <% else %>
                      <%= f.hidden_field :cpf, value: nil %>
                      <%= f.input :cnpj, label: "CNPJ:" %>
                    <% end %>
                  </div>
                </div>
                <%= f.input :skills, label: "Prática à oferecer:" %>
                <%= f.input :availability, label: "Disponibilidade:" %>
                <%= f.input :experience, label: "Experiência:" %>
                <%= f.button :submit, class: 'btn btn-primary' %>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
